<Window x:Class="_3.csapt_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3.csapt_projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="485" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <ImageBrush x:Key="MainBG" ImageSource="/Resources/MainBG.png"/>
    </Window.Resources>
    
    <Grid Width="800" Height="450">
        <Grid Background="DarkBlue" Width="800" Height="50" Margin="0,0,0,400">
            
        </Grid>
        <Grid Background="{StaticResource MainBG}" Width="800" Height="400" Margin="0,50,0,0">
            
        </Grid>
        <ContentControl x:Name="MainContent" VerticalAlignment="Center"/>
    </Grid>

</Window>