<UserControl x:Class="_3.csapt_projekt.StartMenuDark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3.csapt_projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="450">
            <Grid.Background>
                <ImageBrush ImageSource="Resources/StartMenuBackground.jpg" Stretch="Fill"/>
            </Grid.Background>
            <Rectangle HorizontalAlignment="Center" Height="518" Stroke="White" VerticalAlignment="Center" Width="232"/>

            <Button  Content="Play" Height="70" Margin="0,60,0,0" VerticalAlignment="Top" Width="145" HorizontalAlignment="Center" Foreground="White" FontFamily="Impact" FontSize="30" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="3,1,1,1" Click="Play_Click"/>


            <Button  Content="Jobs" Height="70" VerticalAlignment="Top" Width="145" HorizontalAlignment="Center" Margin="0,190,0,0" FontFamily="Impact" FontSize="30" Foreground="White" BorderBrush="{x:Null}" Background="{x:Null}" Click="Jobs_Click">

            </Button>
            <Button Content="Scores" Height="70" Margin="0,320,0,0" VerticalAlignment="Top" Width="144" HorizontalAlignment="Center" FontFamily="Impact" FontSize="30" BorderBrush="{x:Null}" Foreground="White" Background="{x:Null}" Click="GoScores_Click"/>
        </Grid>
    </Viewbox>
</UserControl>
