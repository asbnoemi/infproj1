<UserControl x:Class="_3.csapt_projekt.Jobs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3.csapt_projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ImageBrush x:Key="MainBG" ImageSource="/Resources/MainBG.png"/>
    </UserControl.Resources>
    <Grid Background="{StaticResource MainBG}">
        <Grid Width="800" Height="450">
            <Button x:Name="map1" Content="map 1 &#xD;&#xA; easy" HorizontalAlignment="Left" Margin="202,0,0,0" VerticalAlignment="Center" Height="60" Width="80" Click="mapchange_Click" BorderBrush="White" Foreground="White" FontSize="18" FontFamily="Impact">
                <Button.Background>
                    <SolidColorBrush Color="Black" Opacity="0.4"/>
                </Button.Background>
            </Button>
            <Button x:Name="map2" Content=" map 2 &#xD;&#xA;normal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="77" Click="mapchange_Click" BorderBrush="White" Foreground="White" FontSize="18" FontFamily="Impact">
                <Button.Background>
                    <SolidColorBrush Color="Black" Opacity="0.4"/>
                </Button.Background>
            </Button>
            <Button x:Name="map3" Content="map 3 &#xD;&#xA; hard" HorizontalAlignment="Left" Margin="516,0,0,0" VerticalAlignment="Center" Height="60" Width="79" Click="mapchange_Click" BorderBrush="White" Foreground="White" FontSize="18" FontFamily="Impact">
                <Button.Background>
                    <SolidColorBrush Color="Black" Opacity="0.4"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</UserControl>
