<UserControl x:Class="_3.csapt_projekt.Question"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3.csapt_projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
    <ImageBrush x:Key="MainBG" ImageSource="/Resources/MainBG.png"/>
</UserControl.Resources>
    <Grid Background="{StaticResource MainBG}">
        <Label x:Name="question" Content="Label" Foreground="White" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="311,225,0,0" VerticalAlignment="Top" Click="answer_Click"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="477,225,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button3" Content="Button" HorizontalAlignment="Left" Margin="311,339,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button4" Content="Button" HorizontalAlignment="Left" Margin="477,339,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
