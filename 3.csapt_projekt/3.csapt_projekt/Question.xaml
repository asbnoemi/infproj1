<UserControl x:Class="_3.csapt_projekt.Question"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3.csapt_projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ImageBrush x:Key="MainBG" ImageSource="/Resources/MainBG.png"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource MainBG}">
        <Label x:Name="question" Content="Label" Foreground="White" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Impact"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="85,220,0,0" VerticalAlignment="Top" Click="answer_Click" BorderBrush="White" Foreground="White" FontSize="16" FontFamily="Impact" RenderTransformOrigin="0.226,0.467">
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="494,220,0,0" VerticalAlignment="Top" Click="answer_Click" FontSize="16" FontFamily="Impact" BorderBrush="White" Foreground="White" RenderTransformOrigin="0.976,0.442">
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="button3" Content="Button" HorizontalAlignment="Left" Margin="85,349,0,0" VerticalAlignment="Top" Click="answer_Click" FontSize="16" FontFamily="Impact" BorderBrush="White" Foreground="White">
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Button x:Name="button4" Content="Button" HorizontalAlignment="Left" Margin="494,349,0,0" VerticalAlignment="Top" Click="answer_Click" BorderBrush="White" Foreground="White" FontSize="16" FontFamily="Impact" RenderTransformOrigin="1.166,0.402">
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"/>
            </Button.Background>
        </Button>
        <Label x:Name="eredmeny" Content="Label" Foreground="White" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <Label Content="" HorizontalAlignment="Center" Margin="0,424,0,0" VerticalAlignment="Top"/>
        <Label x:Name="difficulty" Content="" Foreground="White" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
