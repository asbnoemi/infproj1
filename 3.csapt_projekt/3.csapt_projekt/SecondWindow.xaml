<Window x:Class="_3.csapt_projekt.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3.csapt_projekt"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <ContentControl x:Name="SecondContent"/>
        <Button x:Name="CloseBttn" Content="Close" HorizontalAlignment="Right" Height="29" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="81" Click="closeBttn_Click" BorderBrush="White" Foreground="White" FontFamily="Impact" FontSize="18">
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
